<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.album.AlbumDetailsFragment">

    <data>
        <variable name="album" type="com.example.vinylteam8.models.Album"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:scrollbars="vertical"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/ligth_gray"
            app:layout1_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/ligth_gray"
            app:strokeWidth="1dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="1px"
                app:layout_constraintStart_toStartOf="@id/imageView1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/imageAlbumDetails"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:importantForAccessibility="no"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageAlbumDetails"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="30dp"
                        android:text="@{album.name}"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="30sp"/>
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/textView6"
                        android:text="Description"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="120dp"
                        android:layout_below="@+id/textView7"
                        android:text="@{album.description}"
                        android:gravity="left"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/textView8"
                        android:text="Genre"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/textView9"
                        android:text="@{album.genre}"
                        android:gravity="left"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/textView10"
                        android:text="Record Label"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/textView11"
                        android:text="@{album.recordLabel}"
                        android:gravity="left"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/textView12"
                        android:text="Release Date"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/textView13"
                        android:text="@{album.releaseDate}"
                        android:gravity="left"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                </RelativeLayout>

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>